{
  "compilerOptions": {
    "module": "esnext",
    "outDir": "./dist/esm",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types"],
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/index.tsx"],
  "exclude": ["src/_develop"]
}
